{% extends 'base.jinja' %}
{% block content %}
  <div
    class="flex flex-col justify-center text-center items-center justify-items-center gap-4 sm:p-20"
  >
    <h1>Sign in</h1>
    <form
      action="{{ url_for('sign_in') }}"
      method="post"
      class="flex flex-col w-1/5"
    >
      <label>
        <input
          type="email"
          name="email"
          placeholder="Email"
          required
          class="border p-2 rounded-2xl"
        />
      </label>
      <label>
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
          class="border p-2 rounded-2xl"
        />
      </label>
      <input type="submit" value="Sign in" class="mt-1" />
    </form>
    <p>Don't have an account? <a href="{{ url_for('sign_up') }}">Sign up</a></p>
  </div>
{% endblock %}
