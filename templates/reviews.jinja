{% extends 'base.jinja' %}

{% block content %}
  <h1>{% block title %}Rate Your Experience{% endblock %}</h1>
  <p>{{ error }}</p>

  <form
    method="post"
    action="{{ url_for("review", film_id=film['film_id']) }}"
    class="mx-2 w-60"
  >
    <div class="form-group">
      <label for="rating">Rating (0 to 5)</label>
      <input
        type="number"
        id="rating"
        name="rating"
        min="0"
        max="5"
        class="form-control"
        required
        value="{{ request.form['rating'] }}"
      />
    </div>

    <div class="form-group">
      <label for="recensie">Review (Optional)</label>
      <textarea id="recensie" name="recensie" class="form-control">
{{ request.form['review'] }}</textarea
      >
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
{% endblock %}
